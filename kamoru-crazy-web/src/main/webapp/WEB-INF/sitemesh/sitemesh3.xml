<sitemesh>

	<!-- Map default decorator. This shall be applied to all paths if no other paths match. -->
  	<mapping decorator="/WEB-INF/sitemesh/decorator-crazy.jsp"/>
  
	<!-- Map decorators to path patterns. -->
  	<mapping path="/video*" 	decorator="/WEB-INF/sitemesh/decorator-video.jsp"/>
  	<mapping path="/image" 	    decorator="/WEB-INF/sitemesh/decorator-video.jsp"/>
  	<mapping path="/image/canvas" 	    decorator="/WEB-INF/sitemesh/decorator-video.jsp"/>
  	
 	<!-- Alternative convention. This is more verbose but allows multiple decorators to be applied to a single path. 
  	<mapping>
    	<path>/articles/*</path>
    	<decorator>/decorators/article.html</decorator>
    	<decorator>/decorators/two-page-layout.html</decorator>
    	<decorator>/decorators/common.html</decorator>
  	</mapping>-->
   
   	<!-- Exclude path from decoration. -->
  	<mapping path="/res/*" 	exclue="false"/>
  	<mapping path="/jsp/mgw/*" 		exclue="false"/>
  	<mapping path="/jsp/util/webAttribute4Popup.jsp" exclue="false"/>
  	<!-- <mapping path="/image" 	exclue="false"/> -->
  	<!-- <mapping path="/jsp/util/logView.jsp" 	exclue="false"/> -->
</sitemesh>